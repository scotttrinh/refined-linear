{
  "name": "Refined Linear",
  "version": "0.0.0",
  "description": "Simplifies the Linear interface and adds useful features",
  "homepage_url": "https://github.com/scotttrinh/refined-linear",
  "manifest_version": 2,
  "minimum_chrome_version": "77",
  "browser_specific_settings": {
    "gecko": {
      "id": "{28c291b0-913b-4e0b-bfc6-24475192d36f}",
      "strict_min_version": "69.0"
    }
  },
  "options_ui": {
    "browser_style": true,
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "storage",
    "https://linear.app/*",
    "https://api.linear.app/graphql"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://linear.app/*"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ]
}
